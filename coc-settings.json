{
    "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "html", "scss", "json"],
    "prettier.tabWidth": 4,
    "intelephense.format.enable": true,
    "intelephense.format.braces": "k&r",
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**/{Tests,tests}/**",
        "**/.history/**",
        "**/vendor/**/vendor/**"
    ],
    "intelephense.files.associations": [
        "*.php",
        "*.phtml"
    ]
}
